@model IEnumerable<EventEase_CLDV6211_Part1.One.Models.Venue>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VenueName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                <img src="~/images/Venues.jfif" alt="Venue Image" style="width: 100px; height: auto;" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VenueId }) |
                @Html.ActionLink("Details", "Details", new { id = item.VenueId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.VenueId })
            </td>
        </tr>
    }


</table>
